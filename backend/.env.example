# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///edumanage.db
# For PostgreSQL production use:
# DATABASE_URL=postgresql://username:password@localhost/edumanage

# Email Configuration (Optional - for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@edumanage.com

# SMS Configuration (Optional - Africa's Talking)
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_API_KEY=your-africastalking-api-key

# Twilio Configuration (Optional - Alternative SMS provider)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=False
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_QR_ATTENDANCE=True
MULTI_TENANT_MODE=False

# File Upload Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Redis Configuration (for Celery - Optional)
REDIS_URL=redis://localhost:6379/0

# Application Settings
APP_NAME=EduManage Ultimate
ITEMS_PER_PAGE=20
SESSION_TIMEOUT=3600